<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculate_pot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sfu.timr.servingsizecalculator.CalculateServingActivity">

    <TextView
        android:text="@string/pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pot"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/serving_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/servingWeight"
        android:layout_alignTop="@+id/calculate_pot_back_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/weight_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightEmpty"
        android:layout_below="@+id/pot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="@string/weight_with_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightWithFood"
        android:layout_below="@+id/weightEmpty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="@string/number_of_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberServings"
        android:layout_below="@+id/weightWithFood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/calculate_pot_back_button"
        android:layout_below="@+id/numberServings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp" />
</RelativeLayout>
